{
  "testRegex": "(./tests/.*|\\.(spec))\\.(ts)$",
  "collectCoverage": true,
  "testEnvironment": "node",
  "coverageDirectory": "./coverage",
  "coveragePathIgnorePatterns": [
    "node_modules",
    "tests"
  ],
  
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ],
  "testPathIgnorePatterns": [
    "./dist",
    "./tests/__mock__"
  ],
  "roots": [
    "<rootDir>/src",
    "/node_modules/", 
    "\\.pnp\\.[^\\\/]+$"
  ],
  "testMatch": [
    "**/__tests__/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  }
}
